---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="গ্যালারি - মেসার্স আশিক রাইস মিল">
  <Header />
  
  <main class="main-content">
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="container">
        <h1>গ্যালারি</h1>
        <p>আমাদের কাজের ছবি এবং সুবিধাসমূহ</p>
      </div>
    </section>

    <!-- Gallery Categories -->
    <section class="section">
      <div class="container">
        <div class="gallery-nav">
          <button class="gallery-btn active" data-category="all">সব ছবি</button>
          <button class="gallery-btn" data-category="mill">চাল কল</button>
          <button class="gallery-btn" data-category="processing">প্রক্রিয়াজাতকরণ</button>
          <button class="gallery-btn" data-category="products">পণ্যসমূহ</button>
          <button class="gallery-btn" data-category="fields">মাঠ ও ধান</button>
        </div>

        <div class="gallery-grid" id="gallery-grid">
          <!-- Mill Exterior/Interior -->
          <div class="gallery-item" data-category="mill">
            <div class="gallery-card">
              <img src="https://scontent.fdac27-1.fna.fbcdn.net/v/t39.30808-6/480702833_1214223883400203_5649781355188019105_n.jpg?_nc_cat=104&ccb=1-7&_nc_sid=127cfc&_nc_ohc=0ifUzvaLC08Q7kNvwHj5C_v&_nc_oc=Adm1UsQhS-U1S3x0_VOZQl7tqT0jGqypuAn7HLy-T3V-0WIU9WgYvY2DfCymlY6wS-E&_nc_zt=23&_nc_ht=scontent.fdac27-1.fna&_nc_gid=wCPJXcMI5wXQQyvyIhtGdQ&oh=00_AfPAkAyGfKOLPIik7rT5n6bQ-I9czIqvAaUYis2QZrMXxQ&oe=6859B5F9" alt="Rice mill exterior">
              <div class="gallery-overlay">
                <h3>চাল কলের বাহিরের দৃশ্য</h3>
                <p>আমাদের প্রধান কারখানা</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="mill">
            <div class="gallery-card">
              <img src="https://www.shutterstock.com/image-photo/wonosobo-central-java-indonesia-january262020-260nw-1648432195.jpg" alt="Rice mill interior">
              <div class="gallery-overlay">
                <h3>কারখানার ভিতরের অংশ</h3>
                <p>চাল প্রক্রিয়াজাতকরণ এলাকা</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="mill">
            <div class="gallery-card">
              <img src="https://www.shutterstock.com/shutterstock/videos/1062715018/thumb/1.jpg?ip=x480" alt="Storage area">
              <div class="gallery-overlay">
                <h3>সংরক্ষণাগার</h3>
                <p>ধান ও চাল সংরক্ষণের জায়গা</p>
              </div>
            </div>
          </div>

          <!-- Processing -->
          <div class="gallery-item" data-category="processing">
            <div class="gallery-card">
              <img src="https://cdn.bdnews24.com/bdnews24/media/bdnews24-english/import/media/2021/01/25/auto-rice-mill-250121-05.jpg" alt="Hand processing rice">
              <div class="gallery-overlay">
                <h3>চাল ছাঁটাই</h3>
                <p>চাল প্রক্রিয়াজাতকরণ</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="processing">
            <div class="gallery-card">
              <img src="https://scontent.fdac27-1.fna.fbcdn.net/v/t39.30808-6/480787839_1214223886733536_5991500980117023238_n.jpg?_nc_cat=108&ccb=1-7&_nc_sid=127cfc&_nc_ohc=wjJ4ENmr6a8Q7kNvwGepmoi&_nc_oc=AdkMH_OxAWFU3wM9AWKtyWPwRMW9GrpEFH29OnyY97o2N5PGkPSEpiCy6I82BYkwgtw&_nc_zt=23&_nc_ht=scontent.fdac27-1.fna&_nc_gid=JbkBNXqdFAb3Ud-X5QcMWg&oh=00_AfPWBQDj8GtNz9RsXyEN4M3jSLbtCwaFj8EtNOVPuZl5cw&oe=685995E7" alt="Workers processing">
              <div class="gallery-overlay">
                <h3>কর্মীরা কাজে</h3>
                <p>অভিজ্ঞ কর্মীদের দক্ষ হাতের কাজ</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="processing">
            <div class="gallery-card">
              <img src="https://scontent.fdac27-1.fna.fbcdn.net/v/t39.30808-6/494743679_1156147792976600_7313822340645524371_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=127cfc&_nc_ohc=-mrW7ZX8U1AQ7kNvwEHJhHE&_nc_oc=AdmJvimx-ckBGLTekO3ZGH6QdoXxAJu7CaYzBJpcdjWDc0tA2SbSzrX1btSqnbDWwdE&_nc_zt=23&_nc_ht=scontent.fdac27-1.fna&_nc_gid=Xt5WPvKQ2hsrj9aAkjXTVA&oh=00_AfMVqsJrzw_V7QEcV4KtPraP2iYgwSj6oivY5vmLGyeQxw&oe=6859BFE2" alt="Quality checking">
              <div class="gallery-overlay">
                <h3>মান নিয়ন্ত্রণ</h3>
                <p>প্রতিটি ব্যাচের মান পরীক্ষা</p>
              </div>
            </div>
          </div>

          <!-- Products -->
          <div class="gallery-item" data-category="products">
            <div class="gallery-card">
              <img src="https://www.simplyrecipes.com/thmb/tL2jdM1ycBr5clXuIfOdcS9tx00=/750x0/filters:no_upscale():max_bytes(150000):strip_icc():format(webp)/Simply-Recipes-Guide-to-Rice--LEAD-4-380f96ba6772424b849ce2f01bd4e745.jpg" alt="Different rice varieties">
              <div class="gallery-overlay">
                <h3>বিভিন্ন ধরনের চাল</h3>
                <p>কাঁচা, তাজা এবং বিশেষ চাল</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="products">
            <div class="gallery-card">
              <img src="https://transimpex.de/wp-content/uploads/2024/03/grafik-3.png" alt="Packaged rice">
              <div class="gallery-overlay">
                <h3>প্যাকেটজাত চাল</h3>
                <p>স্বাস্থ্যসম্মত প্যাকেজিং</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="products">
            <div class="gallery-card">
              <img src="https://i0.wp.com/www.opindia.com/wp-content/uploads/2020/08/ricebag.png?resize=696%2C390&ssl=1" alt="Bulk rice">
              <div class="gallery-overlay">
                <h3>পাইকারি চাল</h3>
                <p>বড় পরিমাণে চাল সরবরাহ</p>
              </div>
            </div>
          </div>

          <!-- Fields and Paddy -->
          <div class="gallery-item" data-category="fields">
            <div class="gallery-card">
              <img src="https://english.news.cn/20240715/e23dc1b069e54cd6aa80f4b4f5146e57/20240715e23dc1b069e54cd6aa80f4b4f5146e57_202407154aa2ab4719624b3b887e0f4e688f5791.jpg" alt="Paddy fields">
              <div class="gallery-overlay">
                <h3>ধানের ক্ষেত</h3>
                <p>সবুজ ধানের মাঠ</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="fields">
            <div class="gallery-card">
              <img src="https://121clicks.com/wp-content/uploads/2021/07/drying_the_paddy_in_the_sunlight_chatal_bangladesh_09.jpg" alt="Drying field">
              <div class="gallery-overlay">
                <h3>ধান শুকানোর মাঠ</h3>
                <p>ভাড়ার জন্য উপলব্ধ শুকানোর জায়গা</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="fields">
            <div class="gallery-card">
              <img src="https://www.tbsnews.net/sites/default/files/styles/very_big_1/public/images/2024/04/29/sunamgonj_haor_dhan_kata.jpg" alt="Harvested paddy">
              <div class="gallery-overlay">
                <h3>কাটা ধান</h3>
                <p>তাজা কাটা ধান সংগ্রহ</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="fields">
            <div class="gallery-card">
              <img src="https://environment-review.yale.edu/sites/default/files/6315319730_2187b79c3f_o.jpg" alt="Farmers working">
              <div class="gallery-overlay">
                <h3>কৃষকদের কাজ</h3>
                <p>স্থানীয় কৃষকদের সাথে কাজ</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Video Section -->
    <section class="section video-section">
      <div class="container">
        <h2 class="section-title">ভিডিও গ্যালারি</h2>
        <div class="video-grid">
          <div class="video-card card">
            <div class="video-placeholder">
              <div class="play-button">▶️</div>
              <img src="https://cdn.bdnews24.com/bdnews24/media/bdnews24-english/import/media/2021/01/25/auto-rice-mill-250121-05.jpg" alt="Rice processing video">
            </div>
            <h3>চাল ছাঁটার প্রক্রিয়া</h3>
            <p>দেখুন কিভাবে আমরা ঐতিহ্যবাহী পদ্ধতিতে চাল প্রক্রিয়াজাত করি</p>
          </div>

          <div class="video-card card">
            <div class="video-placeholder">
              <div class="play-button">▶️</div>
              <img src="https://scontent.fdac27-1.fna.fbcdn.net/v/t39.30808-6/480702833_1214223883400203_5649781355188019105_n.jpg?_nc_cat=104&ccb=1-7&_nc_sid=127cfc&_nc_ohc=0ifUzvaLC08Q7kNvwHj5C_v&_nc_oc=Adm1UsQhS-U1S3x0_VOZQl7tqT0jGqypuAn7HLy-T3V-0WIU9WgYvY2DfCymlY6wS-E&_nc_zt=23&_nc_ht=scontent.fdac27-1.fna&_nc_gid=wCPJXcMI5wXQQyvyIhtGdQ&oh=00_AfPAkAyGfKOLPIik7rT5n6bQ-I9czIqvAaUYis2QZrMXxQ&oe=6859B5F9" alt="Mill tour video">
            </div>
            <h3>চাল কল ভ্রমণ</h3>
            <p>আমাদের সম্পূর্ণ কারখানা এবং সুবিধাসমূহের পরিচিতি</p>
          </div>

          <div class="video-card card">
            <div class="video-placeholder">
              <div class="play-button">▶️</div>
              <img src="https://scontent.fdac27-1.fna.fbcdn.net/v/t39.30808-6/494743679_1156147792976600_7313822340645524371_n.jpg?_nc_cat=109&ccb=1-7&_nc_sid=127cfc&_nc_ohc=-mrW7ZX8U1AQ7kNvwEHJhHE&_nc_oc=AdmJvimx-ckBGLTekO3ZGH6QdoXxAJu7CaYzBJpcdjWDc0tA2SbSzrX1btSqnbDWwdE&_nc_zt=23&_nc_ht=scontent.fdac27-1.fna&_nc_gid=Xt5WPvKQ2hsrj9aAkjXTVA&oh=00_AfMVqsJrzw_V7QEcV4KtPraP2iYgwSj6oivY5vmLGyeQxw&oe=6859BFE2" alt="Quality control video">
            </div>
            <h3>মান নিয়ন্ত্রণ প্রক্রিয়া</h3>
            <p>কিভাবে আমরা প্রতিটি ধাপে মান নিশ্চিত করি</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>আমাদের কারখানা দেখতে আসুন</h2>
          <p>সরাসরি দেখুন কিভাবে আমরা সর্বোচ্চ মানের চাল তৈরি করি</p>
          <div class="cta-buttons">
            <a href="/contact" class="btn">যোগাযোগ করুন</a>
            <a href="/about" class="btn btn-secondary">আরও জানুন</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .main-content {
    padding-top: 80px;
  }

  .page-hero {
    background: linear-gradient(135deg, #16A34A, #22C55E);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .page-hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .page-hero p {
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .gallery-nav {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .gallery-btn {
    padding: 0.75rem 1.5rem;
    background: white;
    border: 2px solid #16A34A;
    color: #16A34A;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .gallery-btn:hover,
  .gallery-btn.active {
    background: #16A34A;
    color: white;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .gallery-item {
    transition: all 0.3s ease;
  }

  .gallery-item.hidden {
    display: none;
  }

  .gallery-card {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    cursor: pointer;
  }

  .gallery-card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-card:hover img {
    transform: scale(1.05);
  }

  .gallery-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    color: white;
    padding: 2rem 1.5rem 1.5rem;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .gallery-card:hover .gallery-overlay {
    transform: translateY(0);
  }

  .gallery-overlay h3 {
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .gallery-overlay p {
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .video-section {
    background: #F9FAFB;
  }

  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .video-card {
    text-align: center;
  }

  .video-placeholder {
    position: relative;
    margin-bottom: 1rem;
    border-radius: 0.5rem;
    overflow: hidden;
    cursor: pointer;
  }

  .video-placeholder img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 3rem;
    background: rgba(22, 163, 74, 0.9);
    color: white;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .video-placeholder:hover .play-button {
    background: rgba(22, 163, 74, 1);
    transform: translate(-50%, -50%) scale(1.1);
  }

  .video-card h3 {
    color: #16A34A;
    margin-bottom: 0.5rem;
  }

  .cta-section {
    background: linear-gradient(135deg, #16A34A, #22C55E);
    color: white;
    text-align: center;
    padding: 30px;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .page-hero h1 {
      font-size: 2rem;
    }

    .gallery-grid,
    .video-grid {
      grid-template-columns: 1fr;
    }

    .gallery-nav {
      flex-direction: column;
      align-items: center;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-content h2 {
      font-size: 2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const galleryBtns = document.querySelectorAll('.gallery-btn');
    const galleryItems = document.querySelectorAll('.gallery-item');

    galleryBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const category = this.getAttribute('data-category');
        
        // Update active button
        galleryBtns.forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        // Filter gallery items
        galleryItems.forEach(item => {
          if (category === 'all' || item.getAttribute('data-category') === category) {
            item.classList.remove('hidden');
          } else {
            item.classList.add('hidden');
          }
        });
      });
    });

    // Add click handlers for gallery items (for potential lightbox functionality)
    galleryItems.forEach(item => {
      item.addEventListener('click', function() {
        // Here you could add lightbox functionality
        console.log('Gallery item clicked:', this);
      });
    });
  });
</script>