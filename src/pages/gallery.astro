---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="গ্যালারি - মেসার্স আশিক রাইস মিল">
  <Header />
  
  <main class="main-content">
    <!-- Hero Section -->
    <section class="page-hero">
      <div class="container">
        <h1>গ্যালারি</h1>
        <p>আমাদের কাজের ছবি এবং সুবিধাসমূহ</p>
      </div>
    </section>

    <!-- Gallery Categories -->
    <section class="section">
      <div class="container">
        <div class="gallery-nav">
          <button class="gallery-btn active" data-category="all">সব ছবি</button>
          <button class="gallery-btn" data-category="mill">চাল কল</button>
          <button class="gallery-btn" data-category="processing">প্রক্রিয়াজাতকরণ</button>
          <button class="gallery-btn" data-category="products">পণ্যসমূহ</button>
          <button class="gallery-btn" data-category="fields">মাঠ ও ধান</button>
        </div>

        <div class="gallery-grid" id="gallery-grid">
          <!-- Mill Exterior/Interior -->
          <div class="gallery-item" data-category="mill">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Rice mill exterior">
              <div class="gallery-overlay">
                <h3>চাল কলের বাহিরের দৃশ্য</h3>
                <p>আমাদের প্রধান কারখানা</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="mill">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Rice mill interior">
              <div class="gallery-overlay">
                <h3>কারখানার ভিতরের অংশ</h3>
                <p>চাল প্রক্রিয়াজাতকরণ এলাকা</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="mill">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Storage area">
              <div class="gallery-overlay">
                <h3>সংরক্ষণাগার</h3>
                <p>ধান ও চাল সংরক্ষণের জায়গা</p>
              </div>
            </div>
          </div>

          <!-- Processing -->
          <div class="gallery-item" data-category="processing">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Hand processing rice">
              <div class="gallery-overlay">
                <h3>হাতে চাল ছাঁটাই</h3>
                <p>ঐতিহ্যবাহী পদ্ধতিতে চাল প্রক্রিয়াজাতকরণ</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="processing">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Workers processing">
              <div class="gallery-overlay">
                <h3>কর্মীরা কাজে</h3>
                <p>অভিজ্ঞ কর্মীদের দক্ষ হাতের কাজ</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="processing">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Quality checking">
              <div class="gallery-overlay">
                <h3>মান নিয়ন্ত্রণ</h3>
                <p>প্রতিটি ব্যাচের মান পরীক্ষা</p>
              </div>
            </div>
          </div>

          <!-- Products -->
          <div class="gallery-item" data-category="products">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Different rice varieties">
              <div class="gallery-overlay">
                <h3>বিভিন্ন ধরনের চাল</h3>
                <p>কাঁচা, তাজা এবং বিশেষ চাল</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="products">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Packaged rice">
              <div class="gallery-overlay">
                <h3>প্যাকেটজাত চাল</h3>
                <p>স্বাস্থ্যসম্মত প্যাকেজিং</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="products">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Bulk rice">
              <div class="gallery-overlay">
                <h3>পাইকারি চাল</h3>
                <p>বড় পরিমাণে চাল সরবরাহ</p>
              </div>
            </div>
          </div>

          <!-- Fields and Paddy -->
          <div class="gallery-item" data-category="fields">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Paddy fields">
              <div class="gallery-overlay">
                <h3>ধানের ক্ষেত</h3>
                <p>সবুজ ধানের মাঠ</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="fields">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Drying field">
              <div class="gallery-overlay">
                <h3>ধান শুকানোর মাঠ</h3>
                <p>ভাড়ার জন্য উপলব্ধ শুকানোর জায়গা</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="fields">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Harvested paddy">
              <div class="gallery-overlay">
                <h3>কাটা ধান</h3>
                <p>তাজা কাটা ধান সংগ্রহ</p>
              </div>
            </div>
          </div>

          <div class="gallery-item" data-category="fields">
            <div class="gallery-card">
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=400&fit=crop" alt="Farmers working">
              <div class="gallery-overlay">
                <h3>কৃষকদের কাজ</h3>
                <p>স্থানীয় কৃষকদের সাথে কাজ</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Video Section -->
    <section class="section video-section">
      <div class="container">
        <h2 class="section-title">ভিডিও গ্যালারি</h2>
        <div class="video-grid">
          <div class="video-card card">
            <div class="video-placeholder">
              <div class="play-button">▶️</div>
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=300&fit=crop" alt="Rice processing video">
            </div>
            <h3>হাতে চাল ছাঁটার প্রক্রিয়া</h3>
            <p>দেখুন কিভাবে আমরা ঐতিহ্যবাহী পদ্ধতিতে চাল প্রক্রিয়াজাত করি</p>
          </div>

          <div class="video-card card">
            <div class="video-placeholder">
              <div class="play-button">▶️</div>
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=300&fit=crop" alt="Mill tour video">
            </div>
            <h3>চাল কল ভ্রমণ</h3>
            <p>আমাদের সম্পূর্ণ কারখানা এবং সুবিধাসমূহের পরিচিতি</p>
          </div>

          <div class="video-card card">
            <div class="video-placeholder">
              <div class="play-button">▶️</div>
              <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=600&h=300&fit=crop" alt="Quality control video">
            </div>
            <h3>মান নিয়ন্ত্রণ প্রক্রিয়া</h3>
            <p>কিভাবে আমরা প্রতিটি ধাপে মান নিশ্চিত করি</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>আমাদের কারখানা দেখতে আসুন</h2>
          <p>সরাসরি দেখুন কিভাবে আমরা সর্বোচ্চ মানের চাল তৈরি করি</p>
          <div class="cta-buttons">
            <a href="/contact" class="btn">যোগাযোগ করুন</a>
            <a href="/about" class="btn btn-secondary">আরও জানুন</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .main-content {
    padding-top: 80px;
  }

  .page-hero {
    background: linear-gradient(135deg, #16A34A, #22C55E);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .page-hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .page-hero p {
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .gallery-nav {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .gallery-btn {
    padding: 0.75rem 1.5rem;
    background: white;
    border: 2px solid #16A34A;
    color: #16A34A;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .gallery-btn:hover,
  .gallery-btn.active {
    background: #16A34A;
    color: white;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .gallery-item {
    transition: all 0.3s ease;
  }

  .gallery-item.hidden {
    display: none;
  }

  .gallery-card {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    cursor: pointer;
  }

  .gallery-card img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-card:hover img {
    transform: scale(1.05);
  }

  .gallery-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    color: white;
    padding: 2rem 1.5rem 1.5rem;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .gallery-card:hover .gallery-overlay {
    transform: translateY(0);
  }

  .gallery-overlay h3 {
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .gallery-overlay p {
    font-size: 0.9rem;
    opacity: 0.9;
  }

  .video-section {
    background: #F9FAFB;
  }

  .video-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .video-card {
    text-align: center;
  }

  .video-placeholder {
    position: relative;
    margin-bottom: 1rem;
    border-radius: 0.5rem;
    overflow: hidden;
    cursor: pointer;
  }

  .video-placeholder img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 3rem;
    background: rgba(22, 163, 74, 0.9);
    color: white;
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .video-placeholder:hover .play-button {
    background: rgba(22, 163, 74, 1);
    transform: translate(-50%, -50%) scale(1.1);
  }

  .video-card h3 {
    color: #16A34A;
    margin-bottom: 0.5rem;
  }

  .cta-section {
    background: linear-gradient(135deg, #16A34A, #22C55E);
    color: white;
    text-align: center;
    padding: 30px;
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.2rem;
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .page-hero h1 {
      font-size: 2rem;
    }

    .gallery-grid,
    .video-grid {
      grid-template-columns: 1fr;
    }

    .gallery-nav {
      flex-direction: column;
      align-items: center;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .cta-content h2 {
      font-size: 2rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const galleryBtns = document.querySelectorAll('.gallery-btn');
    const galleryItems = document.querySelectorAll('.gallery-item');

    galleryBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const category = this.getAttribute('data-category');
        
        // Update active button
        galleryBtns.forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        // Filter gallery items
        galleryItems.forEach(item => {
          if (category === 'all' || item.getAttribute('data-category') === category) {
            item.classList.remove('hidden');
          } else {
            item.classList.add('hidden');
          }
        });
      });
    });

    // Add click handlers for gallery items (for potential lightbox functionality)
    galleryItems.forEach(item => {
      item.addEventListener('click', function() {
        // Here you could add lightbox functionality
        console.log('Gallery item clicked:', this);
      });
    });
  });
</script>