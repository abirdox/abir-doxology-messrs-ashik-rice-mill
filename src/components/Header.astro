---
const currentPath = Astro.url.pathname;
---

<header class="header">
  <nav class="nav">
    <div class="container">
      <div class="nav-content">
        <div class="logo">
          <a href="/">
            <img src="https://images.pexels.com/photos/1459339/pexels-photo-1459339.jpeg?auto=compress&cs=tinysrgb&w=60&h=60&fit=crop" alt="মেসার্স আশিক রাইস মিল" class="logo-img">
            <span class="logo-text">মেসার্স আশিক রাইস মিল</span>
          </a>
        </div>
        
        <div class="nav-menu" id="nav-menu">
          <a href="/" class={currentPath === '/' ? 'nav-link active' : 'nav-link'}>হোম</a>
          <a href="/about" class={currentPath === '/about' ? 'nav-link active' : 'nav-link'}>আমাদের সম্পর্কে</a>
          <a href="/products" class={currentPath === '/products' ? 'nav-link active' : 'nav-link'}>পণ্য ও সেবা</a>
          <a href="/why-choose-us" class={currentPath === '/why-choose-us' ? 'nav-link active' : 'nav-link'}>কেন আমাদের</a>
          <a href="/gallery" class={currentPath === '/gallery' ? 'nav-link active' : 'nav-link'}>গ্যালারি</a>
          <a href="/contact" class={currentPath === '/contact' ? 'nav-link active' : 'nav-link'}>যোগাযোগ</a>
          <a href="/faq" class={currentPath === '/faq' ? 'nav-link active' : 'nav-link'}>প্রশ্ন ও উত্তর</a>
        </div>

        <div class="nav-toggle" id="nav-toggle">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
      </div>
    </div>
  </nav>
</header>

<style>
  .header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    border-bottom: 1px solid rgba(22, 163, 74, 0.1);
  }

  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
  }

  .logo a {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #16A34A;
    font-weight: 700;
    font-size: 1.25rem;
  }

  .logo-img {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 0.75rem;
    object-fit: cover;
  }

  .nav-menu {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-link {
    text-decoration: none;
    color: #374151;
    font-weight: 500;
    padding: 0.5rem 0;
    position: relative;
    transition: all 0.3s ease;
  }

  .nav-link:hover,
  .nav-link.active {
    color: #16A34A;
  }

  .nav-link.active::after,
  .nav-link:hover::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 2px;
    background: #16A34A;
    border-radius: 1px;
  }

  .nav-toggle {
    display: none;
    flex-direction: column;
    cursor: pointer;
  }

  .bar {
    width: 25px;
    height: 3px;
    background: #374151;
    margin: 3px 0;
    transition: 0.3s;
    border-radius: 2px;
  }

  @media (max-width: 768px) {
    .nav-menu {
      position: fixed;
      left: -100%;
      top: 70px;
      flex-direction: column;
      background: white;
      width: 100%;
      text-align: center;
      transition: 0.3s;
      box-shadow: 0 10px 27px rgba(0, 0, 0, 0.05);
      padding: 2rem 0;
      gap: 1rem;
    }

    .nav-menu.active {
      left: 0;
    }

    .nav-toggle {
      display: flex;
    }

    .nav-toggle.active .bar:nth-child(2) {
      opacity: 0;
    }

    .nav-toggle.active .bar:nth-child(1) {
      transform: translateY(8px) rotate(45deg);
    }

    .nav-toggle.active .bar:nth-child(3) {
      transform: translateY(-8px) rotate(-45deg);
    }

    .logo-text {
      font-size: 1rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const navToggle = document.getElementById('nav-toggle');
    const navMenu = document.getElementById('nav-menu');

    if (navToggle && navMenu) {
      navToggle.addEventListener('click', function() {
        navMenu.classList.toggle('active');
        navToggle.classList.toggle('active');
      });

      // Close menu when clicking on a link
      const navLinks = navMenu.querySelectorAll('.nav-link');
      navLinks.forEach(link => {
        link.addEventListener('click', function() {
          navMenu.classList.remove('active');
          navToggle.classList.remove('active');
        });
      });
    }
  });
</script>